---
import { JSW_COLORS } from "../utils/constants";
import AnchorButton from "./AnchorButton.astro";
let { title, image, buttonText, buttonLink, hasButton, categoryTitle } =
  Astro.props;
---

<div
  class="download-catalogue-bblstds d-flex flex-column justify-content-center align-items-start"
  style={{
    background: `url(${image})`,
    backgroundSize: "cover",
    backgroundPosition: "center",
    backgroundRepeat: "no-repeat",
  }}
>
  <h1>
    {title}
  </h1>
  {
    hasButton && (
      <AnchorButton
        style={`background-color:${JSW_COLORS.bg.light}; color: ${JSW_COLORS.text.dark}; z-index: 1;`}
        className="mt-4"
        href={buttonLink}
        download={`${categoryTitle}.pdf`}
        target="_blank"
      >
        {buttonText}
      </AnchorButton>
    )
  }
</div>

<style>
  .download-catalogue-bblstds {
    padding: 0 4rem;
    border-radius: 2rem;
    color: white;
    height: 400px;
    position: relative;
    overflow: hidden;
  }

  .download-catalogue-bblstds > *,
  a {
    z-index: 1;
  }

  .download-catalogue-bblstds::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to bottom right, black, transparent);
    z-index: 0;
  }

  @media screen and (max-width: 768px) {
    .download-catalogue-bblstds {
      height: 300px;
      padding: 0 2rem;
    }
  }
</style>
