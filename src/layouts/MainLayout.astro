---
const { title, desc, metaImg } = Astro.props;
const { pathname } = Astro.url;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="title" content="" />
    <meta name="description" content={desc || "JSW Cement"} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://www.jswcement.in/${pathname}`} />
    <meta property="og:title" content={title || "JSW Cement"} />
    <meta property="og:description" content={desc || "JSW Cement"} />
    <meta property="og:image" content={`https://jswcement.in${metaImg}`} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content={`https://www.jswcement.in/${pathname}`}
    />
    <meta property="twitter:title" content={title || "JSW Cement"} />
    <meta property="twitter:description" content={desc || "JSW Cement"} />
    <meta property="twitter:image" content={`https://jswcement.in${metaImg}`} />

    <link rel="canonical" href={`https://jswcement.in/${pathname}`} />

    <script
      defer
      src="https://use.fontawesome.com/releases/v5.0.8/js/fontawesome.js"
      integrity="sha384-7ox8Q2yzO/uWircfojVuCQOZl+ZZBg2D2J5nkpLqzH1HY0C1dHlTKIbpRz/LG23c"
      crossorigin="anonymous"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&family=Red+Hat+Display:wght@700&display=swap"
      rel="stylesheet"
    />
    <link href="/css/bootstrap.min.css" rel="stylesheet" />

    <link href="/css/animate.css" rel="stylesheet" />

    <link href="/css/slick-theme.min.css" rel="stylesheet" />

    <link href="/css/slick.min.css" rel="stylesheet" />

    <link href="/css/jquery.fancybox.min.css" rel="stylesheet" />

    <link href="/css/swiper.css" rel="stylesheet" />

    <link href="/css/style.css" rel="stylesheet" />

    <link href="/css/responsive.css" rel="stylesheet" />

    <title>{title || "JSW"}</title>
  </head>
  <body>
    <!-- <Header /> -->
    <main>
      <slot />
    </main>
    <!-- <Footer /> -->
  </body>
</html>

<script is:inline src="/js/jquery-3.5.0.min.js"></script>

<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
  integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
  crossorigin="anonymous"></script>

<script is:inline src="/js/bootstrap.bundle.min.js"></script>

<script is:inline src="/js/hoverIntent.js"></script>

<script is:inline src="/js/slick.min.js"></script>

<script is:inline src="/js/jquery.fancybox.min.js"></script>

<script is:inline src="/js/swiper.js"></script>

<script is:inline src="/js/main.js"></script>

<script is:inline>
$(document).ready(function () {
  $(".collapse").on("shown.bs.collapse", function (e) {
    var $card = $(this).closest(".card");

    $("html,body").animate(
      {
        scrollTop: $card.offset().top,
      },
      500
    );
  });
});
</script>
