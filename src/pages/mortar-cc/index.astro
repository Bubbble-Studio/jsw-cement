---
import Category from "../../components/Category.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import mortarProducts from "../../content/mortar-cc";
import { CATEGORY_LIST } from "../../utils/constants";

let Title = "Mortar";
let Image = "/images/mortar/mortar-banner.png";
let products = mortarProducts.map((product) => ({
  name: product.title,
  image: product.image,
  link: `/mortar-cc/${product.slug}`,
}));
let otherCategories = CATEGORY_LIST.filter((cat) => cat.title !== "Mortar");
---

<MainLayout>
  <Category headerBG={Image} title={Title} {products} {otherCategories} />
</MainLayout>
 ../../content/mortar_cc
