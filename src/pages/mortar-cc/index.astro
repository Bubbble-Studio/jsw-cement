---
import Category from "../../components/Category.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import mortarProducts from "../../content/mortar-cc";
import { CATEGORY_LIST } from "../../utils/constants";

let Title = "Mortar";
let Image = "/images/mortar/mortar-banner.png";
let products = mortarProducts.map((product) => ({
  name: product.title,
  image: product.image,
  link: `/mortar-cc/${product.slug}`,
}));
let otherCategories = CATEGORY_LIST.filter((cat) => cat.title !== "Mortar");
---

<MainLayout
  title={`${Title} (CC) - JSW Cement`}
  desc="Smooth finishes just got a whole lot stronger! The Block Grip Adhesive helps form a robust bond with reduced water consumption, complemented by Enduro Plast's enhanced bond strength & minimized rebound."
  metaImg={Image}
>
  <Category
    headerBG={Image}
    title={Title}
    {products}
    {otherCategories}
    categoryBrochure="/pdf/category/Mortar-Catalogue.pdf"
    bannerImages={[
      "/images/mortar/banner-images/MORTAR-1.jpg",
      "/images/mortar/banner-images/MORTAR-2.jpg",
    ]}
  />
</MainLayout>
