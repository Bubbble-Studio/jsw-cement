---
import Category from "../../components/Category.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import steelGroutPages from "../../content/steel-grouts-cc";
import { CATEGORY_LIST } from "../../utils/constants";

let Title = "Precision Steel Grouts";
let Image = "/images/steel-grouts/banner-img.png";
let products = steelGroutPages.map((product) => ({
  name: product.title,
  image: product.image,
  link: `/precision-steel-grouts-cc/${product.slug}`,
}));
let otherCategories = CATEGORY_LIST.filter(
  (cat) => cat.title !== "Precision Steel Grouts"
);
---

<MainLayout>
  <Category
    headerBG={Image}
    title={Title}
    {products}
    {otherCategories}
    categoryBrochure="/pdf/category/Steel-Grout-Catalogue.pdf"
    bannerImages={[
      "/images/steel-grouts/banner-images/STEEL-GROUT-1.jpg",
      // "/images/steel-grouts/banner-images/STEEL-GROUT-2.jpg",
      "/images/steel-grouts/banner-images/STEEL-GROUT-3.jpg",
    ]}
  />
</MainLayout>
