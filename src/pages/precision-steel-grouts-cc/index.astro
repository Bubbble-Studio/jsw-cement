---
import Category from "../../components/Category.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import steelGroutPages from "../../content/steel-grouts-cc";

let Title = "Precision Steel Grouts";
let Image = "/images/tile-adhesive/Rectangle526.png";
let products = steelGroutPages.map((product) => ({
  name: product.title,
  image: product.image,
  link: `/precision-steel-grouts-cc/${product.slug}`,
}));
let otherCategories = [
  {
    name: "MORTAR",
    image: "/images/tile-adhesive/BLOCK GRIP ADHESIVE_Image.png",
    link: "/mortar-cc",
  },
  {
    name: "WATERPROOFING",
    image: "/images/tile-adhesive/BLOCK GRIP ADHESIVE_Image-1.png",
    link: "/waterproofing-cc",
  },
  {
    name: "TILE ADHESIVE, GROUT & CLEANER",
    image: "/images/tile-adhesive/BLOCK GRIP ADHESIVE_Image-2.png",
    link: "/tile-adhesive-grout-cleaner-cc",
  },
];
---

<MainLayout>
  <Category headerBG={Image} title={Title} {products} {otherCategories} />
</MainLayout>
