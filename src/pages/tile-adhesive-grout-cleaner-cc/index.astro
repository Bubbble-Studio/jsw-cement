---
import Category from "../../components/Category.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import tileAdhesiveProducts from "../../content/tile-adhesive-grout-cleaner-cc";
import { CATEGORY_LIST } from "../../utils/constants";

let Title = "Tile Adhesive, Grout & Cleaner";
let Image = "/images/tile-adhesive/banner-img.png";
let products = tileAdhesiveProducts.map((product) => ({
  ...product,
  name: product.name,
  image: product.image,
  link: `/tile-adhesive-grout-cleaner-cc/${product.slug}`,
}));
let otherCategories = CATEGORY_LIST.filter(
  (cat) => cat.title.includes("Tile Adhesive") === false
);
---

<MainLayout
  title={`${Title} (CC) - JSW Cement`}
  desc="Fix, clean & sustain with ease! The Tile Adhesive, Grout, and Cleaner are part of our top-quality tile range products that offer premium fixtures, and quick stain removal and are perfect for rendering surfaces waterproof and chemical-resistant."
  metaImg={Image}
>
  <Category
    headerBG={Image}
    title={Title}
    {products}
    {otherCategories}
    categoryBrochure="/pdf/category/Tile-Adhesive-Grout-Cleaner-Catalogue.pdf"
    bannerImages={[
      "/images/tile-adhesive/banner-images/TILE-ADHESIVE-1.jpg",
      "/images/tile-adhesive/banner-images/TILE-ADHESIVE-2.jpg",
      "/images/tile-adhesive/banner-images/TILE-ADHESIVE-3.jpg",
      "/images/tile-adhesive/banner-images/TILE-ADHESIVE-4.jpg",
    ]}
  />
</MainLayout>
