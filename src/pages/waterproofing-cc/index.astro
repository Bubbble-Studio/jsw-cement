---
import Category from "../../components/Category.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import waterproofingProducts from "../../content/waterproofing-cc";
import { CATEGORY_LIST } from "../../utils/constants";

let Title = "Waterproofing";
let Image = "/images/waterproofing/banner-img.jpg";
let products = waterproofingProducts.map((product) => ({
  ...product,
  name: product.name,
  image: product.image,
  link: `/waterproofing-cc/${product.slug}`,
}));

let otherCategories = CATEGORY_LIST.filter(
  (cat) => cat.title !== "Waterproofing"
);
---

<MainLayout
  title={`${Title} (CC) - JSW Cement`}
  desc="The most effective waterproofing product range is here! The JSW SmartBlok waterproofing range is not only multi-purpose but also strengthens the bond between old and new concrete and plaster for a variety of applications."
  metaImg={Image}
>
  <Category
    headerBG={Image}
    title={Title}
    {products}
    {otherCategories}
    categoryBrochure="/pdf/category/Waterproofing-Range-Catalogue.pdf"
    bannerImages={[
      "/images/waterproofing/banner-images/WATERPROOFING-1.jpg",
      "/images/waterproofing/banner-images/WATERPROOFING-2.jpg",
      "/images/waterproofing/banner-images/WATERPROOFING-3.jpg",
      "/images/waterproofing/banner-images/WATERPROOFING-4.jpg",
      "/images/waterproofing/banner-images/WATERPROOFING-5.jpg",
      "/images/waterproofing/banner-images/WATERPROOFING-6.jpg",
    ]}
  />
</MainLayout>
