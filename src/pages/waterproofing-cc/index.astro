---
import Category from "../../components/Category.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import waterproofingProducts from "../../content/waterproofing-cc";
import { CATEGORY_LIST } from "../../utils/constants";

let Title = "Waterproofing";
let Image = "/images/waterproofing/banner-img.jpg";
let products = waterproofingProducts.map((product) => ({
  ...product,
  name: product.name,
  image: product.image,
  link: `/waterproofing-cc/${product.slug}`,
}));

let otherCategories = CATEGORY_LIST.filter(
  (cat) => cat.title !== "Waterproofing"
);
---

<MainLayout>
  <Category
    headerBG={Image}
    title={Title}
    {products}
    {otherCategories}
    categoryBrochure="/pdf/category/Waterproofing-Range-Catalogue.pdf"
  />
</MainLayout>
